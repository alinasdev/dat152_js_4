.. Table Student
USE DAT152DB;

DROP TABLE IF EXISTS Student;
CREATE TABLE Student (
    id INT UNSIGNED AUTO_INCREMENT,
    firstname VARCHAR(255) NOT NULL,
    lastname VARCHAR(255) NOT NULL,
    level ENUM('bachelor', 'master', 'phd') NOT NULL,
    PRIMARY KEY (id)
);

